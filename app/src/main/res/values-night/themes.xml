<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EcommerceOnKt" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:fontFamily">@font/cantata_one</item>
    </style>

    <style name="bottom_style" parent="Theme.AppCompat.DayNight.DarkActionBar"/>

    <style name="background">
        <item name="android:background">@color/bg_color</item>
    </style>

    <style name="edit_15" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_40</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="text_15" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/white_40</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>

    <style name="text_15_match" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/black_40</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>

    <style name="text_15_match_bold" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/black_40</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_16" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/white_40</item>
    </style>

</resources>