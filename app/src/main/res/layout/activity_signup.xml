<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/background"
    tools:context=".SignupActivity">

    <EditText
        android:id="@+id/signup_firstname"
        android:hint="First Name"
        android:layout_marginTop="@dimen/_10sdp"
        style="@style/edit_15"/>

    <EditText
        android:id="@+id/signup_lastname"
        android:hint="Last Name"
        android:layout_marginTop="@dimen/_10sdp"
        style="@style/edit_15"/>

    <EditText
        android:inputType="textEmailAddress"
        android:id="@+id/signup_email"
        android:hint="Email Id"
        android:layout_marginTop="@dimen/_10sdp"
        style="@style/edit_15"/>

    <EditText
        android:maxLength="10"
        android:inputType="phone"
        android:id="@+id/signup_contact"
        android:hint="Contact No."
        android:layout_marginTop="@dimen/_10sdp"
        style="@style/edit_15"/>

    <EditText
        android:inputType="textPassword"
        android:id="@+id/signup_password"
        android:hint="Password"
        android:layout_marginTop="@dimen/_10sdp"
        style="@style/edit_15"/>

    <EditText
        android:inputType="textPassword"
        android:id="@+id/signup_retype_password"
        android:hint="ReType Password"
        android:layout_marginTop="@dimen/_10sdp"
        style="@style/edit_15"/>

    <RadioGroup
        android:orientation="horizontal"
        android:id="@+id/signup_gender"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_weight="1"
            android:id="@+id/signup_male"
            android:text="Male"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:layout_weight="1"
            android:id="@+id/signup_female"
            android:text="Female"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <CheckBox
        android:id="@+id/signup_terms"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:text="Terms And Condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/signup_button"
        android:text="Signup"
        android:layout_marginTop="@dimen/_20sdp"
        app:backgroundTint="@color/yellow"
        style="@style/button_16"/>

</LinearLayout>